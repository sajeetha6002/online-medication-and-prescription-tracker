<script>
    function showRoleSection() {
        let role = document.getElementById("role").value;

        document.getElementById("doctorSection").style.display = "none";
        document.getElementById("patientSection").style.display = "none";
        document.getElementById("pharmacistSection").style.display = "none";

        if (role === "doctor") document.getElementById("doctorSection").style.display = "block";
        if (role === "patient") document.getElementById("patientSection").style.display = "block";
        if (role === "pharmacist") document.getElementById("pharmacistSection").style.display = "block";
    }

    document.getElementById("loginForm").addEventListener("submit", function(event) {
        event.preventDefault();
        alert("Login Submitted Successfully!");
    });
</script>

