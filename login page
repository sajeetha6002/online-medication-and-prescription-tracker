<body>
<div class="login-box">
    <h2>Login</h2>

    <form id="loginForm">

        <label>Full Name</label>
        <input type="text" id="fullname" required>

        <label>Email ID</label>
        <input type="email" id="email" required>

        <label>Password</label>
        <input type="password" id="password" required>

        <label>Role</label>
        <select id="role" required onchange="showRoleSection()">
            <option value="">-- Select Role --</option>
            <option value="doctor">Doctor</option>
            <option value="patient">Patient</option>
            <option value="pharmacist">Pharmacist</option>
        </select>

        <div id="doctorSection" class="role-section">
            <h4>Prescription Details</h4>
            <input type="text" placeholder="Enter prescription details">
        </div>

        <div id="patientSection" class="role-section">
            <h4>Schedule</h4>
            <input type="text" placeholder="Enter schedule">
        </div>

        <div id="pharmacistSection" class="role-section">
            <h4>Stack of Medicine</h4>
            <input type="text" placeholder="Enter medicine stack">
        </div>

        <button type="submit">Submit</button>
    </form>
